<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="marekbodziony.eyewit.MainActivity">

    <TextView
        android:id="@+id/eyewit_logo_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Eyewit"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/record_btn"
        app:layout_constraintVertical_bias="0.41000003"
        app:layout_constraintHorizontal_bias="0.502"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/eyewit_city_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="WARSZAWA"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintLeft_toLeftOf="@+id/eyewit_logo_txt"
        app:layout_constraintRight_toRightOf="@+id/eyewit_logo_txt"
        app:layout_constraintTop_toBottomOf="@+id/eyewit_logo_txt"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <ImageButton
        android:id="@+id/record_btn"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        android:text="Record"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45"
        app:srcCompat="@android:drawable/presence_video_busy" />

    <TextView
        android:id="@+id/clik_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click:"
        android:textColor="@android:color/holo_red_light"
        android:textSize="18sp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/click_times_val"
        app:layout_constraintTop_toBottomOf="@+id/record_btn" />

    <TextView
        android:id="@+id/click_times_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        android:text="3"
        android:textColor="@android:color/holo_red_light"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/clik_txt"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@+id/clik_txt"
        app:layout_constraintRight_toLeftOf="@+id/click_times_txt" />

    <TextView
        android:id="@+id/click_times_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="times to record"
        android:textColor="@android:color/holo_red_light"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/clik_txt"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@+id/click_times_val"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/policja_btn"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="997"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/straz_poz_btn"
        app:layout_constraintTop_toBottomOf="@+id/record_btn"
        app:layout_constraintVertical_bias="0.7" />

    <Button
        android:id="@+id/straz_poz_btn"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:text="998"
        app:layout_constraintBaseline_toBaselineOf="@+id/policja_btn"
        app:layout_constraintLeft_toRightOf="@+id/policja_btn"
        app:layout_constraintRight_toLeftOf="@+id/karetka_btn" />

    <Button
        android:id="@+id/karetka_btn"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:text="999"
        app:layout_constraintBaseline_toBaselineOf="@+id/policja_btn"
        app:layout_constraintLeft_toRightOf="@+id/straz_poz_btn"
        app:layout_constraintRight_toLeftOf="@+id/straz_miejska_btn" />

    <Button
        android:id="@+id/straz_miejska_btn"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:text="986"
        app:layout_constraintBaseline_toBaselineOf="@+id/policja_btn"
        app:layout_constraintLeft_toRightOf="@+id/karetka_btn"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/lat_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lat:"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/lat_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00.00000"
        app:layout_constraintLeft_toRightOf="@+id/lat_txt"
        android:layout_marginLeft="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/lat_txt" />

    <TextView
        android:id="@+id/lon_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lon:"
        app:layout_constraintLeft_toRightOf="@+id/lat_val"
        android:layout_marginLeft="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/lat_txt" />

    <TextView
        android:id="@+id/lon_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00.00000"
        app:layout_constraintLeft_toRightOf="@+id/lon_txt"
        android:layout_marginLeft="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/lon_txt" />

    <TextView
        android:id="@+id/time_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time:"
        app:layout_constraintLeft_toRightOf="@+id/lon_val"
        android:layout_marginLeft="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/lat_txt" />

    <TextView
        android:id="@+id/time_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:00 25/12/2017"
        app:layout_constraintLeft_toRightOf="@+id/time_txt"
        android:layout_marginLeft="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/time_txt" />

</android.support.constraint.ConstraintLayout>
